@import '../../style/';

.hiui-spinner {
  color: #666;
  vertical-align: middle;
  text-align: center;

  &.hiui-spinner-wrap {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    font-size: 14px;
    color: _blue;
    background-color: rgba(0, 0, 0, .8);
    z-index: 99;

    .hiui-spinner-content {
      display: block;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .hiui-icon {
      display: block;
    }
  }
}

