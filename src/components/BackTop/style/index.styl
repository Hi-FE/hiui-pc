@import '../../style/';

.hiui-backTop {
  position: fixed;
  z-index: 10;
  right: _backTop_right;
  bottom: _backTop_bottom;
  cursor: pointer;

  .hiui-icon {
    display: block;
    width: 50px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 26px;
    color: _white;
    background-color: rgba(0, 0, 0, .6);
    border-radius: 2px;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .2);
    transition: all .2s ease-in-out;

    &:hover {
      background-color: rgba(0, 0, 0, .85);
    }
  }
}
