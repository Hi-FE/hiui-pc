@import '../../style/';

.hiui-loading {
  position: fixed;
  top: 0;
  left: 0;
  height: 2px;
  transition: all .2s linear;
  z-index: 999;

  &.hiui-loading-loading {
    background-color: _blue;
  }

  &.hiui-loading-success {
    background-color: _green;
  }

  &.hiui-loading-error {
    background-color: _red;
  }

  .hiui-icon {
    position: fixed;
    top: 5px;
    right: 5px;
    color: _blue;
  }
}

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s
}
.fade-enter, .fade-leave-to {
  opacity: 0
}

