@import '../../style/';

.hiui-calendar {
  z-index: 9;
  display: inline-block;
  padding: 20px;
  border: 1px solid #ccc;
  box-sizing: content-box;
  line-height: normal;

  .hiui-calendar-header {
    position: relative;
    font-size: 16px;
    text-align: center;

    span {
      margin: 0 5px;
      font-size: 18px;
      cursor: pointer;
      transition: all .3s;

      &:hover {
        color: _blue;
      }
    }

    .hiui-icon {
      position: absolute;
      top: 50%;
      opacity: .6;
      transform: translateY(-50%);
      cursor: pointer;
      transition: opacity .3s;

      &:hover {
        opacity: 1;
      }
    }

    .icon-left {
      left: 10px;
    }

    .icon-right {
      right: 10px;
    }
  }

  .hiui-calendar-date {
    overflow: hidden;
    cursor: default;
    display: table;
    margin: 0;

    tbody {
      position: relative;
      display: table;
      width: 100%;
      height: 100%;
    }

    tr {
      border: none;
      outline: none;
      box-shadow: none;
    }

    th, td {
      width: floor(100% / 7%);
      text-align: center;
      user-select: none;
      border: none;
      cursor: pointer;
      font-size: 14px;
      padding: 0;
    }

    th {
      color: #333;
    }

    td {
      border: 1px solid #fff;
      background-color: #efefef;
      transition: all .2s;

      &.cur_month {
        color: #333;
        font-weight: 600;
      }

      &.prev_month, &.next_month {
        color: #777;
        background-color: #f7f7f7;
      }

      &.today {
        box-shadow: inset 0 0 0 1px _blue;
      }

      &.active {
        color: _white;
        background-color: _blue;
        cursor: default;
      }

      &.disabled {
        color: #ccc;
        cursor: not-allowed;
        font-weight: normal;

        &.cur_month {
          // color: #ccc;
        }
      }

      &:not(.disabled):not(.active):hover {
        color: _white;
        background-color: _blue_light;
      }
    }
  }
}
