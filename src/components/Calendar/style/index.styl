@import '../../style/';

_month_col = 4;
_month_row = 3;
_year_col = 4;
_year_row = 5;

.hiui-calendar {
  z-index: 9;
  display: inline-block;
  padding: 20px;
  border: 1px solid #ccc;
  box-sizing: content-box;
  line-height: normal;
  white-space: nowrap;

  .hiui-calendar-wrap {
    display: inline-block;
    vertical-align: top;
    white-space: nowrap;
    padding: 5px;
  }

  .hiui-calendar-header {
    position: relative;
    font-size: 16px;
    text-align: center;

    span {
      margin: 0 5px;
      font-size: 18px;
      cursor: pointer;
      transition: all .3s;

      &.year-range {
        cursor: default;
      }

      &:not(.year-range):hover {
        color: _blue;
      }
    }

    .hiui-icon {
      position: absolute;
      top: 50%;
      opacity: .6;
      transform: translateY(-50%);
      cursor: pointer;
      transition: opacity .3s;

      &:hover {
        opacity: 1;
      }
    }

    .icon-left {
      left: 10px;
    }

    .icon-right {
      right: 10px;
    }
  }
}

// 日历
.hiui-calendar-date {
  overflow: hidden;
  display: table;
  width: 100%;
  border-collapse: collapse;
  margin: 0;

  .hiui-calendar-date-body {
    position: relative;
    display: table;
    width: 100%;
    height: 100%;

    tr {
      border: none;
      outline: none;
      box-shadow: none;
    }

    th, td {
      width: floor(100% / 7%);
      text-align: center;
      user-select: none;
      border: none;
      cursor: pointer;
      font-size: 14px;
      padding: 0;
    }

    th {
      color: #333;
    }

    td {
      position: relative;
      border: 1px solid #fff;
      background-color: #efefef;
      transition: all .2s;

      &.cur_month {
        color: #333;
        font-weight: 600;
      }

      &.prev_month, &.next_month {
        color: #777;
        background-color: #f7f7f7;

        &.active, &.inRange {
          opacity: .66;
        }
      }

      &.today {
        box-shadow: inset 0 0 0 1px _blue;
      }

      &.inRange {
        background-color: lighten(_blue_light, 80%);
      }

      &.active {
        color: _white;
        background-color: _blue;
        cursor: default;
      }

      &.disabled {
        color: #ccc;
        cursor: not-allowed;
        font-weight: normal;
      }

      &:not(.disabled):not(.active):hover, &:not(.active).isHover {
        color: _white;
        background-color: _blue_light;
      }
    }
  }
}

// 月历 / 年历
.hiui-calendar-month, .hiui-calendar-year {
  overflow: hidden;
  white-space: pre-wrap;
  font-size: 0px;

  .hiui-calendar-month-item, .hiui-calendar-year-item {
    position: relative;
    display: inline-block;
    font-size: 18px;
    background-color: #efefef;
    border: 1px solid _white;
    cursor: pointer;
    transition: all .3s;

    &.today {
      box-shadow: inset 0 0 0 1px _blue;
    }

    &.active {
      color: _white;
      background-color: _blue;
    }

    &.disabled {
      color: #ccc;
      cursor: not-allowed;
      font-weight: normal;
    }

    &:not(.disabled):not(.active):hover {
      color: _white;
      background-color: _blue_light;
    }
  }
}


.hiui-calendar-month .hiui-calendar-month-item {
  width: unit(100 / _month_col, '%');
  height: unit(100 / _month_row, '%');
}

.hiui-calendar-year .hiui-calendar-year-item {
  width: unit(100 / _year_col, '%');
  height: unit(100 / _year_row, '%');
}

// slot
.hiui-calendar-date-slot {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: left;
  white-space: normal;

  .hiui-calendar-date-default-slot {
    display: inline-block;
    position: absolute;
    left: 50%;
    top: 50%;
    white-space: nowrap;
    transform: translate(-50%, -50%);
  }
}